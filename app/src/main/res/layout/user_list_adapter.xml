<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/user_list_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/User_List_Movie_Image"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        />
    <EditText
        android:id="@+id/User_List_Movie_Rating"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:layout_below="@+id/User_List_Movie_Image"
        />
    <ImageButton
        android:id="@+id/User_List_Movie_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove_red_eye_black_24dp"
        android:layout_below="@+id/User_List_Movie_Title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/User_List_Movie_Update"
        />
    <TextView
        android:id="@+id/User_List_OutOfTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/User_List_Movie_Rating"
        android:layout_below="@+id/User_List_Movie_Image"
        android:text="/10"
        />
    <TextView
        android:id="@+id/User_List_Movie_Title"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/User_List_Movie_Rating"
        android:textSize="25dp"
        android:text="Title"
        />
    <ImageButton
        android:id="@+id/User_List_Movie_Update"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/User_List_Movie_Title"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_create_black_24dp"
        />


</RelativeLayout>