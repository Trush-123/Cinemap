<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Profile_Activity">

    <EditText
        android:id="@+id/profile_edit_username"
        android:layout_marginTop="100dp"
        android:layout_width="150dp"
        android:hint="Username"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/profile_edit_description"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/profile_edit_username"
        android:layout_width="150dp"
        android:hint="Description"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/profile_edit_update"
        android:text="Update"
        android:layout_below="@+id/profile_edit_setIamge"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/profile_edit_username"
        android:layout_marginStart="130dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/profile_edit_setIamge"
        android:text="Set Image"
        android:layout_below="@+id/profile_edit_back"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/profile_edit_username"
        android:layout_marginStart="130dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/profile_edit_back"
        android:layout_below="@+id/profile_edit_profImage"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_toRightOf="@+id/profile_edit_username"
        android:layout_marginStart="130dp"
        android:text="BACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_toRightOf="@+id/profile_edit_username"
        android:layout_marginStart="130dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/profile_edit_profImage"
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

</RelativeLayout>